<%- include('../partials/header') %>

    <section id="show-page">
        <div>Game:</div>
        <div><%= game.game %></div>
        <div>User:</div>
        <div><%= game.user[0].name %></div>
        <div>Title:</div>
        <div><%= game.title %></div>
        <div>Description:</div>
        <div><%= game.content %></div>
        <div>Proof:</div>
        <a href="<%= game.proof %>" target="_blank"><%= game.proof %></a>
        <p><%= game.date %></p>
    </section>
    <% if (game.user[0]._id.toString() === user._id.toString()) { %>
    <a href='/games/edit/<%= id%>'>Edit Brag</a>
    <% } %>
    <a href='/games/'>Back</a>
    <br /><br />
    <h2>Comments:</h2>
        <form id="add-comment-form" method="POST" action="/games/<%= game._id %>/comments">
            <label>Comment:</label>
            <textarea name="content"></textarea>
            <label>Rating:</label>
            <select name="rating">
                <option value="Awesome Job!">Awesome Job!</option>
                <option value="Keep It Up!">Keep It Up!</option>
                <option value="I Can Do Better!">I Can Do Better!</option>
                <option value="SHAME!">SHAME!</option>
            </select>
        <input type="submit" value="Add Comment" />
    </form>
    <% if (game.comments.length) { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Comments</th>
            <th>Rating</th>
          </tr>
        </thead>
        <tbody>
          <% game.comments.forEach(function(c) { %>
          <tr>
            <td><%= c.createdAt.toLocaleDateString() %></td>
            <td><%= c.content %></td>
            <td><%= c.rating %></td> 
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <h5>No Comments Yet</h5>
      <% } %>
                
    
                
    
      
      
</body>