<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Fredericka+the+Great&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Document</title>
<body>
    <header>
        <h1 class="maintitle">BRAG BOARD</h1>
        <div class="topnav">
          <a href="/logout">Log Out</a>
          <a href="/auth/google">Login with Google</a>
        </div>
    </header>
    <section id="show-page">
        <div><%= game.game %></div>
        <div>Title:</div>
        <div><%= game.title %></div>
        <div>Description:</div>
        <div><%= game.content %></div>
        <div>Proof:</div>
        <div><%= game.proof %></div>
    </section>
    <a href='/games/edit/<%= id%>'>Edit Brag</a>
    <br /><br />
    <h2>Comments</h2>
        <form id="add-comment-form" method="POST" action="/games/<%= game._id %>/comments">
            <label>Comment:</label>
            <textarea name="content"></textarea>
            <label>Rating:</label>
            <select name="rating">
                <option value="Awesome Job!">Awesome Job!</option>
                <option value="Keep It Up!">Keep It Up!</option>
                <option value="I Can Do Better!">I Can Do Better!</option>
                <option value="SHAME!">SHAME!</option>
            </select>
        <input type="submit" value="Add Comment" />
    </form>
    <% if (game.comments.length) { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Comments</th>
            <th>Rating</th>
          </tr>
        </thead>
        <tbody>
          <% game.comments.forEach(function(c) { %>
          <tr>
            <td><%= c.createdAt.toLocaleDateString() %></td>
            <td><%= c.content %></td>
            <td><%= c.rating %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <h5>No Comments Yet</h5>
      <% } %>
                
    
                
    
      
      
</body>